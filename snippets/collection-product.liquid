<li class="flex min-h-[22rem] h-full flex-col items-center justify-center flex-1 w-full gap-5 px-4 py-0 md:w-1/2 lg:w-1/4">
  <a href="{{product.url}}" class="flex flex-col items-center justify-between w-full h-full">
    {% render 'ornament-top' %}
    <div class="w-32 overflow-hidden h-fit">
      <img
        class="object-contain "
        src="{{ product.featured_image | image_url: width: 450 }}"
        alt="{{ featured_image.alt | escape }}">
    </div>
    <div class="flex flex-col items-center pt-3 ">
      <h3 class="h3 heading-text-color">{{ product.title }}</h3>
      <span class="body heading-text-color">{{ product.price | money }}</span>
    </div>

    {% render 'ornament-bottom' %}
  </a>
</li>