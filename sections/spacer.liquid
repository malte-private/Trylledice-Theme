<div class="space-container"></div>

{% style %}
  .space-container {
    height: {{ section.settings.height}}rem;
  }
{% endstyle %}

{% schema %}
  {
    "name": "Spacer",
    "settings": [
      {
        "type": "range",
        "id": "height",
        "min": 0.2,
        "max": 5,
        "step": 0.2,
        "unit": "rem",
        "label": "Height",
        "default": 1
      }
    ],

    "presets": [
      {
        "name": "Spacer"
      }
    ]

  }
{% endschema %}